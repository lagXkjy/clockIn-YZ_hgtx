/* pages/clockIn/Examination/Examination.wxss */

.conent {
  height: 220rpx;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #dfdfdf;
}

.img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 30rpx;
}

.img>image {
  width: 100%;
  height: 100%;
}

.content_text {
  display: flex;
  flex-direction: column;
  justify-content:space-between;
  flex: 1;
}

.content_title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.text {
  font-size: 22rpx;
  color: #979797;
  line-height: 14px;
  display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
  /* letter-spacing（间距设置）、text-indent（缩进） */
}

.button {
  width: 140rpx;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  color: #fff;
  background: #7c99d0;
  border-radius: 8rpx;
  align-self:flex-end;
}


.no_ranking {
  padding: 30rpx;
  font-size: 30rpx;
  text-align: center;
  margin-top: 150rpx;
}
.no_ranking view{
  display: flex;
  justify-content: center;
  width: 100%;
  margin-bottom: 47rpx;
  box-sizing: border-box;
}
.no_ranking view image {
  width: 192rpx;
  height: 215rpx;
}