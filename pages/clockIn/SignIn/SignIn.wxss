  box-sizing: border-box;
  align-items: center;
}
.day{
  color: 2e2e2e;
  font-size: 32rpx;
  display: flex;
  align-items: center;
}
.day>view{
  font-size: 48rpx;
  font-weight: bold;
  margin-right: 15rpx;
}
.newdata{
  font-size: 30rpx;
background: #7c99d0;
color: #fff;
padding: 15rpx 30rpx;
