}
/* 日历 */
.date-show{
   position:relative;
width:250rpx;
font-family:PingFang-SC-Regular;
font-size:26rpx;
color:#282828;
text-align:center;
margin:59rpx auto 10rpx;
font-weight:bold;
}
.lt-arrow,.rt-arrow{
    position: absolute;
    top: 1rpx;
    width: 30rpx;
    height: 30rpx;
  padding-right: 0.6rem;
}
.lt-arrow image,.rt-arrow image{
    width: 30rpx;
    height: 30rpx;
}
.lt-arrow{
    left: -120rpx;
    /* transform: rotate(180deg); */
}
.rt-arrow{
    right: -120rpx;
}
.header{
    font-size: 0;
    padding: 0 24rpx;
    background: #f5f6fa;
    margin: 25rpx 0;
}
.header>view{
    display: inline-block;
    width: 14.285%;
    color: #b0b0b0;
    font-size: 24rpx;
    text-align: center;
    border-bottom: 1px solid #D0D0D0;
    padding: 15rpx 0;
}
.weekMark{
    position: relative;
}
.weekMark view{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    border-bottom: 1px solid #7c99d0;
}
.date-box{
    font-size: 0;
    padding: 10rpx 0;
}
.date-box>view{
    position: relative;
    display: inline-block;
    width: 14.285%;
    color: #2e2e2e;
    font-size: 40rpx;
    text-align: center;
    vertical-align: middle;
    margin: 10rpx 0;
}
.date-head{
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
}
.nowDay .date-head{
    width: 60rpx;
    border-radius: 50%;
    text-align: center;
    color: #fff;
    background-color: #7c99d0;
    margin: 0 auto;
}
.date-weight{
    font-size: 22rpx;
    padding: 15rpx 0;
}
.nowDay .date-weight{
    color: #7c99d0;
}
.actives .date-head{
  width: 60rpx;
    border-radius: 50%;
    text-align: center;
    margin: 0 auto;
  border: 5rpx solid #7c99d0;
  box-sizing: border-box;
}
.one{
    position: absolute;
    bottom: 0;
    right: 5rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: red;
}
.two{
    position: absolute;
    bottom: 30rpx;
    right: 5rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: blue;
}