/* pages/clockIn/Purchase/Purchase.wxss */
.banner {
  width: 100%;
  margin: 0;
  font-size: 0;
  display: block;
}
.titlebox{
  padding: 30rpx;
  background: #fff;
  margin-bottom: 30rpx;
  font-size: 32rpx;
}
.title{
  font-weight: bold;
  margin-bottom: 10rpx;
}
.pop>text:first-child{
  font-weight: bold;
  color: #eb504c;
  margin-right: 10rpx;
}
.pop>text:last-child{
  color: #959595;
  font-size: 24rpx;
}
.activity {
  box-sizing: border-box;
  padding: 30rpx;
  background: #fff;
}

.activity-text {
  font-size: 26rpx;
  color: #000;
  line-height: 30rpx;
}

.activity-image-box {
  /* display: flex;
  align-items: center; */
}

.activity-image {
  /* width: 160rpx;
  height: 160rpx; *//* margin-right: 10rpx; */
  width: 60%;
  margin: 20rpx auto 0;
  display: block;
}

.activity-music {
  display: block;
}

.activity-video {
  width: 100%;
  height: 300rpx;
}

.margin-t-30 {
  margin-top: 30rpx;
}
.botton{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #7c99d0;
  color: #fff;
  font-size: 30rpx;
  border-radius: 0;
  border: 0;
}