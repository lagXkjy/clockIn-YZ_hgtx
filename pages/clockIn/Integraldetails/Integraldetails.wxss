  border-left: 4rpx solid #7c99d0;
}
.Header>text{
  display: block;
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #666666;
  padding: 5rpx 0 ;
}
.content{
  margin-top: 17rpx;
  border-top: 1rpx solid #d1d0d4;
}
.content>view>image{
  width: 100%;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
