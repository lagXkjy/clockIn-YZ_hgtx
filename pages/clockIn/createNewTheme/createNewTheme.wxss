/* pages/clockIn/createNewTheme/createNewTheme.wxss */

.header {
  padding: 30rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.image-box {
  width: 280rpx;
  height: 140rpx;
  box-sizing: border-box;
  border: 1px dashed #7c9acf;
  background: #eef5fe;
  position: relative;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: #7c9acf;
}

.image-add {
  font-size: 80rpx;
  font-weight: bold;
  line-height: 80rpx;
}

.image-text {
  font-size: 24rpx;
}

.image-text text {
  font-size: 22rpx;
}

.header-image-box {
  width: 280rpx;
  height: 140rpx;
  position: absolute;
  top: -1px;
  left: -1px;
  z-index: 2;
  box-sizing: border-box;
  border: 1px solid #fff;
}

.header-image {
  width: 100%;
  height: 100%;
}

.header-image-delete {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  position: absolute;
  top: -18rpx;
  right: -18rpx;
  background: #fff;
}

.header-right {
  width: 350rpx;
  height: 140rpx;
}

.header-input {
  height: 70rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eaeaea;
  font-size: 28rpx;
  color: #000;
}

.placeholder {
  color: #c8c8c8;
}

.header-picker {
  width: 100%;
  height: 70rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #000;
}

.picker-box {
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #000;
}

.picker-time {
  height: 100%;
  display: flex;
  align-items: center;
}

.picker-image {
  width: 15rpx;
}

publish {
  display: block;
  margin-top: 20rpx;
  background: #fff;
  padding: 30rpx;
}

.footer {
  height: 100rpx;
  background: #7c9acf;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
