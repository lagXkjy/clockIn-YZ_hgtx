page {
  background: #000;
}

.wrapper {
  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
  padding-bottom: 130rpx;
  padding-top: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

#content {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  top: 0;
  left: 0;
}

.canvas {
  width: 100%;
  height: 100%;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}

.cut-canvas {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.footer {
  display: flex;
  height: 100rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #fff;
  box-sizing: border-box;
  border-top: 1px solid #fff;
  padding: 0 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
