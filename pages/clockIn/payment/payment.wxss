/* pages/clockIn/payment/payment.wxss */

.box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #e6e6e6;
}

.con {
  display: flex;
  align-items: center;
}

.img {
  width: 80rpx;
  height: 80rpx;
}

.img>image {
  width: 100%;
  height: 100%;
}

.money {
  color: #eb504c;
  font-weight: bold;
}

.introduce {
  margin: 0 20rpx;
}

.inputbox {
  border-top: 1rpx solid #e0e0e0;
  background: #fff;
  margin-top: 20rpx;
  font-size: 30rpx;
}

.inputbox>view {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 101rpx;
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #d8d8d8;
  background: #7c99d0;
  color: #fff;
  text-align: center;
  line-height: 101rpx;
  font-size: 32rpx;
}

.footer>view {
  height: 100%;
  width: 50%;
  line-height: 100rpx;
  font-size: 24rpx;
  text-align: center;
}

.footer>view:first-child {
  color: #000;
  background: #fff;
  padding-left: 35rpx;
  box-sizing: border-box;
}

.footer>view:first-child>text {
  color: #eb504c;
  font-weight: bold;
  font-size: 30rpx;
}

.footer>view:last-child {
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}
