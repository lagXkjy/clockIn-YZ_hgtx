/* pages/clockIn/checkAllTheme/checkAllTheme.wxss */

search {
  border-bottom: 1px solid #f0f0f0;
  display: block;
}

.nowCheckpoint {
  box-sizing: border-box;
  padding: 30rpx 30rpx 0;
  background: #fff;
}

.title {
  color: #000;
  box-sizing: border-box;
  border-left: 9rpx solid #7c99d0;
  padding-left: 20rpx;
  font-size: 34rpx;
}

.title-g {
  color: #c9c9c9;
  margin: 0 10rpx;
}

.nowCheckpoint-box {
  margin-top: 30rpx;
  width: 100%;
  height: 345rpx;
  position: relative;
  top: 0;
  left: 0;
}

.nowCheckpoint-image {
  width: 100%;
  height: 100%;
}

.nowCheckpoint-prompt {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 28rpx;
  box-sizing: border-box;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.wrapper {
  padding: 30rpx 30rpx 0;
  margin-bottom: 30rpx;
  background: #fff;
}

.info {
  padding: 30rpx 0;
  box-sizing: border-box;
  border-bottom: 1px solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.theme-image {
  width: 200rpx;
  height: 100rpx;
}

.box {
  width: 450rpx;
}

.list-title {
  font-size: 28rpx;
  color: #000;
  word-break: break-all;
  word-wrap: break-word;
  margin-bottom: 20rpx;
}

.pass {
  border: 1px solid #e96733;
  font-size: 24rpx;
  color: #e96733;
  padding: 8rpx 20rpx;
  border-radius: 5rpx;
  display: inline-block;
}

.list-footer {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: flex-end;
}

.list-btn {
  height: 50rpx;
  border-radius: 50rpx;
  padding: 0 30rpx;
  border: 1px solid #e5e5e5;
  font-size: 24rpx;
  color: #5e5e5e;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}

.list-image {
  width: 26rpx;
  margin-right: 10rpx;
}

.h {
  margin-bottom: 20rpx;
}

.list-time {
  font-size: 24rpx;
  color: #999;
}

.pass-box {
  display: flex;
  align-items: center;
}

.pass-no {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
  margin-right: 5rpx;
}

.pass-image {
  width: 36rpx;
}
