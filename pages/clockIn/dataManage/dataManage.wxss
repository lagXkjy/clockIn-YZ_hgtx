/* pages/clockIn/dataManage/dataManage.wxss */

.header {
  padding: 30rpx;
  background: #7c9acf;
}

.header-title {
  color: #fff;
  font-size: 30rpx;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.header-images {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.header-info {
  width: 400rpx;
  font-size: 24rpx;
  color: #fff;
  padding-left: 18rpx;
}

.header-info-en {
  width: 320rpx;
  font-size: 24rpx;
  color: #fff;
  padding-left: 18rpx;
}

.header-name {
  word-wrap: break-word;
  word-break: break-all;
  margin-bottom: 10rpx;
}

.header-right {
  font-size: 24rpx;
  color: #fff;
  display: flex;
  align-items: center;
}
.header-right-en{
  font-size: 24rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.header-activity {
  background: #f19f37;
  border-radius: 5rpx;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  margin-right: 14rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
}
.header-activity-en {
  background: #f19f37;
  border-radius: 5rpx;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  height: 50rpx;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.header-manage {
  border: 1px solid #fff;
  border-radius: 5rpx;
  padding: 0rpx 19rpx;
  height: 50rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.box {
  margin-top: 20rpx;
  padding: 30rpx;
  background: #fff;
}

.yesterDay {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.yesterDay-title {
  font-size: 26rpx;
  color: #000;
}

.yesterDay-time {
  font-size: 24rpx;
  color: #888;
}

.yesterDay-box {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.yesterDay-list {
  height: 150rpx;
  width: 220rpx;
  box-sizing: border-box;
  border: 1px solid #ededed;
  border-radius: 10rpx;
  padding: 20rpx;
  position: relative;
  top: 0;
  left: 0;
}

.yesterDay-type {
  font-size: 26rpx;
  color: #a4a4a4;
  margin-bottom: 30rpx;
}
.yesterDay-type-en {
  font-size: 24rpx;
  color: #a4a4a4;
  /* margin-bottom: 30rpx; */
}

.yesterDay-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #000;
}
.yesterDay-number-en{
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
  position: absolute;
  bottom: 10rpx;
  left: 20rpx;
}

.data {
  background: #fff;
  margin-top: 20rpx;
}

.data-list {
  border-top: 1px solid #ededed;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 82rpx;
  padding: 0 30rpx;
}

.data-type {
  font-size: 26rpx;
  color: #000;
}

.data-number {
  font-size: 24rpx;
  color: #888;
}

.data-details {
  font-size: 26rpx;
  color: #000;
  padding: 30rpx;
}

.data-time {
  font-size: 24rpx;
  color: #888;
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.picker {
  display: flex;
  align-items: center;
}

.picker-image {
  width: 26rpx;
  margin-left: 10rpx;
}

.data-to {
  margin: 0 20rpx;
}

.footer{
  margin: 20rpx 0;
  box-sizing: border-box;
  padding: 0 40rpx;
}

.footer-btn{
  width: 100%;
  border-radius: 10rpx;
  color: #fff;
  font-size: 28rpx;
  background: #e85650;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}