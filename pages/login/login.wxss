/* pages/login/login.wxss */
.wrapper{
    width: 100vw;
    height: 100vh;
    background: #ffffff;
    position: relative;
    top: 0;
    left: 0;
    overflow: hidden;
}
.bg-image{
    width: 100%;
    height: 100%;
}
.continue{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}
.login{
    background: #51aa38;
    width: 92%;
    height: 90rpx;
    border-radius: 90rpx;
    color: #ffffff;
    font-size: 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.wechat{
    width: 58rpx;
    margin-right: 16rpx;
    line-height: 90rpx;
}