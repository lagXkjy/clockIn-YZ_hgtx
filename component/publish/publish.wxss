.textarea {
  width: 100%;
  height: 280rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #e8e8e8;
}

.placeholder {
  font-size: 30rpx;
  color: #999;
}

.media {
  display: flex;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #e8e8e8;
  padding-bottom: 30rpx;
}

.media-list {
  width: 150rpx;
  height: 150rpx;
  border: 2px solid #e4e4e4;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 5rpx;
}

.media-image {
  width: 72rpx;
}

.box {
  padding: 30rpx 0;
  border-bottom: 1px solid #e8e8e8;
}

.video {
  width: 290rpx;
  height: 220rpx;
}

.video-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.video-delete {
  border: 1px solid #eb514c;
  color: #eb514c;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border-radius: 3rpx;
}

.image-box {
  display: flex;
}

.add-image {
  border: 2px solid #e4e4e4;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 100rpx;
  color: #999;
  line-height: 100rpx;
}

.add-image-image {
  width: 70rpx;
}

.image-list {
  box-sizing: border-box;
  margin-left: 20rpx;
  position: relative;
  top: 0;
  left: 0;
  width: 150rpx;
  height: 150rpx;
  border-radius: 5rpx;
  overflow: hidden;
}
.file{
  box-sizing: border-box;
  position: relative;
  top: 0;
  left: 0;
  overflow: hidden;
  padding:10rpx 30rpx;
}
.flietext{
    overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.image-image {
  width: 100%;
  height: 100%;
}

.image-first {
  margin-left: 0;
}

.image-delete {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  border-radius: 50%;
  background: #fff;
  overflow: hidden;
}

.audio-box {
  width: 100%;
  border-radius: 8rpx;
  border: 1px solid #e1e1e1;
  background: #fdfdfd;
  height: 140rpx;
  box-sizing: border-box;
  display: flex;
}

.audio-delete {
  height: 100%;
  width: 100rpx;
  position: relative;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.audio-delete-image {
  width: 24rpx;
}

.audio-delete-g {
  position: absolute;
  right: -6rpx;
  margin: auto;
  font-size: 40rpx;
  color: #b2b2b2;
  line-height: 42rpx;
  font-weight: 100;
}

.audio-content {
  display: flex;
  height: 100%;
  align-items: center;
  padding-right: 36rpx;
  justify-content: space-between;
  width: 100%;
}

.audio-left {
  display: flex;
  height: 100%;
  align-items: center;
}

.audio-point {
  width: 15rpx;
  height: 15rpx;
  background: #eb514c;
  border-radius: 50%;
  margin-right: 10rpx;
  margin-left: 30rpx;
  font-size: 0;
  line-height: 0;
}

.audio-time {
  color: #eb514c;
  font-size: 26rpx;
  line-height: 26rpx;
}

.audio-right {
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.audio-complate {
  height: 100%;
  color: #7c9acf;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.audio-status {
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  box-sizing: border-box;
  border: 10rpx solid #f3f3f3;
  padding: 20rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.audio-pause {
  width: 100%;
  height: 100%;
  background: #7c9acf;
  border-radius: 50%;
}

.audio-resume {
  width: 100%;
  height: 100%;
  background: #eb514c;
  border-radius: 50%;
}

.add-content{
  font-size: 30rpx;
  color: #7c9acf;
  box-sizing: border-box;
  padding-bottom: 35rpx;
}