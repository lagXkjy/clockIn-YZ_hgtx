/* component/diaryList/diaryList.wxss */

.wrapper {
  background: #fff;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}

.left {
  width: 82rpx;
  height: 82rpx;
  overflow: hidden;
  border-radius: 50%;
}

.right {
  width: 85%;
  padding-top: 20rpx;
}

.name {
  word-break: break-all;
  word-wrap: break-word;
  font-size: 30rpx;
  color: #2e2e2e;
}

.day {
  font-size: 24rpx;
  color: #929292;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.activity {
  word-wrap: break-word;
  word-break: break-all;
  font-size: 26rpx;
  color: #2e2e2e;
  margin-top: 0;
}

.image-box {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.image-list {
  width: 190rpx;
  height: 190rpx;
  margin: 0 20rpx 20rpx 0;
}

.checkpoint {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}

.checkpoint-activity {
  background: #f4f4f4;
  color: #909090;
  font-size: 24rpx;
  word-wrap: break-word;
  word-break: break-all;
  max-width: 100%;
  padding: 20rpx;
  border-radius: 5rpx;
}

.function {
  display: flex;
}

.share {
  margin: 0;
  padding: 0;
  background: #fff;
  border: none;
  line-height: normal;
  display: flex;
  align-items: center;
  margin-right: 60rpx;
}

.share::after {
  border: none;
}

.share-image {
  width: 36rpx;
  margin-right: 10rpx;
}

.share-text {
  line-height: 26rpx;
  font-size: 26rpx;
  color: #636363;
}

.commit {
  background: #f4f4f4;
  margin-top: 30rpx;
}

.praise {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  font-size: 24rpx;
  color: #58698e;
}

.praise-image {
  width: 30rpx;
}

.praise-text {
  width: 92%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  /* line-height: 26rpx; */
}

.comment-list {
  padding: 20rpx;
  border-top: 1px solid #e7e7e7;
  font-size: 26rpx;
}

.comment-name {
  color: #58698e;
  margin-right: 15rpx;
}

.comment-text {
  color: #1b1b1b;
}

.margin-t-30 {
  margin-top: 30rpx;
}
.block{
  display: block;
}

.video {
  width: 100%;
  height: 300rpx;
}

.voice {
  width: 50%;
  display: block;
  margin-top: 20rpx;
}

.more {
  font-size: 28rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  color: #7c9acf;
  background: #fff;
  padding: 20rpx 0;
}

.delete {
  color: #7c9acf;
  margin-left: 20rpx;
  line-height: 0rpx;
}

.show-date {
  margin-right: 10rpx;
}

.activity-z {
  width: 100%;
  box-sizing: border-box;
  height: 100rpx;
  background: #faf9f9;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.activity-right {
  width: 16rpx;
}

.activity-left {
  width: 85%;
  display: flex;
  align-items: center;
}

.activity-image {
  width: 100rpx;
  height: 100rpx;
}

.activity-text {
  margin-left: 24rpx;
  font-size: 26rpx;
  color: #000;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 75%;
}
