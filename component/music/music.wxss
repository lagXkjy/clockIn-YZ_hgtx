/* component/music/music.wxss */

.wrapper {
  border: 1px solid #ebebeb;
  background: #fdfdfd;
  border-radius: 8rpx;
  box-sizing: border-box;
  height: 140rpx;
  display: flex;
}

.delete {
  height: 100%;
  width: 100rpx;
  position: relative;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.delete-image {
  width: 24rpx;
}

.delete-g {
  position: absolute;
  right: -6rpx;
  margin: auto;
  font-size: 40rpx;
  color: #b2b2b2;
  line-height: 42rpx;
  font-weight: 100;
}

.content {
  display: flex;
  height: 100%;
  align-items: center;
  padding-right: 36rpx;
  justify-content: space-between;
  width: 100%;
}

.content-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 30rpx;
  /* margin-right: 15rpx; */
}

.play {
  width: 100%;
  height: 100%;
}

.time {
  font-size: 24rpx;
  color: #888;
  width: 64rpx;
}

.develop {
  width: 46%;
}

.progress {
  width: 100%;
}
